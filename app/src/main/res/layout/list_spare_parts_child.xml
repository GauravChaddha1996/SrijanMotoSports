<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cook_your_car_background"
    android:orientation="horizontal"
    android:fadingEdge="horizontal">
    <ImageButton
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:id="@+id/child_img"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/child_img"
                android:paddingRight="@dimen/activity_horizontal_margin"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/child_list_item_spare_parts_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="SparePartSpecification"
                    android:textSize="18sp"
                    android:layout_alignBaseline="@+id/quantity_edit_text"
                    android:layout_alignBottom="@+id/quantity_edit_text"
                    android:layout_toStartOf="@+id/button"
                    android:layout_marginEnd="55dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:textSize="14sp"
                    android:id="@+id/details"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</FrameLayout>