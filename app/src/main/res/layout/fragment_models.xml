<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context="com.srijan.motosports.features.models.ModelsFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/about_description"
            android:id="@+id/button_model_TSI_17_SE"
            android:background="@drawable/shape_model_button"
            android:text="TSI-17-SE"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_model_TSI_17_SE"
            android:layout_marginBottom="@dimen/about_description"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:id="@+id/button_model_TSI_17_KE"
            android:background="@drawable/shape_model_button"
            android:text="TSI-17-KE"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_model_button"
            android:layout_below="@id/button_model_TSI_17_KE"
            android:padding="10dp"
            android:layout_marginBottom="@dimen/about_description"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:text="Cook Up Your Own Car"
            android:id="@+id/button_cook_car"

            />
    </LinearLayout>


</RelativeLayout>
