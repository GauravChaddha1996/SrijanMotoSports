<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/childCardView"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="4dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckedTextView
            android:id="@+id/child_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:checkMark="?android:attr/listChoiceIndicatorSingle"
            android:text="Hiper Racing" />

        <TextView
            android:id="@+id/child_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/child_title"
            android:padding="8dp"
            android:layout_alignParentLeft="true"
            android:text="Carbon Plastic CFI - 10 inch" />

        <TextView
            android:id="@+id/child_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginLeft="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/child_description"
            android:text="$37"
            android:gravity="right"
            android:textStyle="bold" />
    </RelativeLayout>



</android.support.v7.widget.CardView>