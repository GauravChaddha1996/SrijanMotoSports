<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <CheckedTextView
                android:id="@+id/child_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkMark="?android:attr/listChoiceIndicatorSingle"
                android:padding="8dp"
                android:text="Hiper Racing" />

            <TextView
                android:id="@+id/child_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/child_title"
                android:padding="8dp"
                android:text="Carbon Plastic CFI - 10 inch" />

            <TextView
                android:id="@+id/child_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/child_description"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:gravity="right"
                android:padding="8dp"
                android:text="$37"
                android:textStyle="bold" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>